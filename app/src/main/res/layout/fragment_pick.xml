<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.simtuit.hat.PickFragment">


    <TextView
        android:id="@+id/textview_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="@dimen/result_textsize"
        android:layout_weight="1"
        android:gravity="center"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        >

        <ImageButton
            android:id="@+id/edit_hat_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_edit_hat_button"
            android:paddingRight="@dimen/padding_edit_hat_button"
            android:src="@drawable/ic_action_edit_hat"
            android:contentDescription="@string/description_edit_hat"

            android:layout_centerHorizontal="true"
            />

        <ImageButton
            android:id="@+id/button_prev_pick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_pick_nav"
            android:paddingRight="@dimen/padding_pick_nav"
            android:src="@drawable/ic_action_previous_pick"
            android:contentDescription="@string/description_edit_hat"

            android:layout_toLeftOf="@id/edit_hat_button"
            />

        <ImageButton
            android:id="@+id/button_next_pick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_pick_nav"
            android:paddingRight="@dimen/padding_pick_nav"
            android:src="@drawable/ic_action_next_pick"
            android:contentDescription="@string/description_edit_hat"


            android:layout_toRightOf="@id/edit_hat_button"
            />
    </RelativeLayout>

</LinearLayout>
