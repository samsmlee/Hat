<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.simtuit.hat.VoteFragment"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/vote_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/vote_hint"
            android:inputType="text"
            android:layout_weight="1"
            android:imeOptions="actionDone"/>
        <ImageButton
            android:id="@+id/add_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_new_vote"
            />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ListView
            android:id="@android:id/list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
        <TextView
            android:id="@android:id/empty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >


            <ImageButton
                android:id="@+id/pick_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/padding_pick_button"
                android:paddingRight="@dimen/padding_pick_button"
                android:text="@string/pick_button"
                android:src="@drawable/ic_action_pick"
                android:contentDescription="@string/description_pick_hat"

                android:layout_centerHorizontal="true"

                />

            <ImageButton
                android:id="@+id/button_view_picked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/padding_pick_nav"
                android:paddingRight="@dimen/padding_pick_nav"
                android:src="@drawable/ic_action_next_pick"
                android:contentDescription="@string/description_edit_hat"
                android:visibility="gone"

                android:layout_toRightOf="@id/pick_button"
                />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>